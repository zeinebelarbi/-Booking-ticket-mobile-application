<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigningActivity"
    android:background="@drawable/fond">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:gravity="center_horizontal"
            android:text="Welcome\n to\n your OnlineShop"
            android:textAlignment="center"
            android:textColor="@color/colorApp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150sp"
            android:gravity="center_horizontal"
            android:text="Please sign in here!!"
            android:textAlignment="center"
            android:textColor="@color/colorApp2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/logo"
            tools:layout_marginEnd="30sp"
            tools:layout_marginTop="10sp" />


    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/colorApp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="15sp"
                android:padding="10sp"/>

            <EditText
                android:id="@+id/emailSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Exemple@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"
                android:padding="16sp"
                android:layout_marginRight="15dp"
                android:drawableEnd="@drawable/ic_mail"
                android:drawableTint="@color/colorApp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/colorApp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="15sp"
                android:padding="10sp"/>

            <EditText
                android:id="@+id/passwordSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:inputType="textPassword"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"
                android:padding="16sp"
                android:layout_marginRight="15dp"
                android:drawableEnd="@drawable/ic_key"
                android:drawableTint="@color/colorApp"/>


            <CheckBox
                android:id="@+id/remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me !"
                android:textColor="@color/colorApp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="10sp"
                />






            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget password !"
                android:layout_gravity="end"
                android:textColor="@color/colorApp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_margin="15sp"
                android:padding="10sp"
                />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="sign in "
                android:backgroundTint="@color/colorApp2"
                app:cornerRadius="15sp"
                />

            <TextView
                android:id="@+id/newUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="New user ! Register here !"
                android:layout_gravity="center"
                android:textColor="@color/colorApp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="10sp"
                />

        </LinearLayout>



    </LinearLayout>
</ScrollView>
